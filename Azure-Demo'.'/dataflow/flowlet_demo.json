{
	"name": "flowlet_demo",
	"properties": {
		"type": "Flowlet",
		"typeProperties": {
			"sources": [],
			"sinks": [],
			"transformations": [
				{
					"name": "aggGroupByCount"
				},
				{
					"name": "flowletinput"
				},
				{
					"name": "flowletoutput"
				}
			],
			"scriptLines": [
				"input(output(",
				"          DEPARTMENT_ID as string",
				"     ),",
				"     order: 0,",
				"     allowSchemaDrift: true) ~> flowletinput",
				"flowletinput aggregate(groupBy(DEPARTMENT_ID),",
				"     COUNT = count(),",
				"     partitionBy('hash', 1)) ~> aggGroupByCount",
				"aggGroupByCount output(mapColumn(",
				"          DEPARTMENT_ID,",
				"          COUNT",
				"     )) ~> flowletoutput"
			]
		}
	}
}